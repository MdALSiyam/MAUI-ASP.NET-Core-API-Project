<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Client.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Client"
    Shell.FlyoutBehavior="Flyout"
    Title="Client">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    
    <ShellContent
        Title="Student Create Page"
        ContentTemplate="{DataTemplate local:StudentCreatePage}"
        Route="StudentCreatePage" />

    <ShellContent
        Title="Student List Page"
        ContentTemplate="{DataTemplate local:StudentListPage}"
        Route="StudentListPage" />
    
</Shell>
